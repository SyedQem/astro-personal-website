                {p.data.repo && (
                  <a
                    href={p.data.repo}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-block text-sm text-emerald-400 hover:text-emerald-300"
                  >
                    View repository â†’
                  </a>
                )}
        
                {p.data.demo && (
                  <a
                    href={p.data.demo}
                    target="_blank"
                    rel="noopener noreferrer"
